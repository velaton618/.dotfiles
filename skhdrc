# -- Changing Window Focu --

# change window focus within space
shift + cmd - j : yabai -m window --focus south
shift + cmd - k : yabai -m window --focus north
shift + cmd - h : yabai -m window --focus west
shift + cmd - l : yabai -m window --focus east

#change focus between external displays (left and right)
# shift + cmd - s: yabai -m display --focus west
shift + cmd - g: yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
shift + cmd - r : yabai -m space --rotate 270

# flip along y-axis
shift + cmd - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + cmd - x : yabai -m space --mirror x-axis

# toggle window float
shift + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# -- Modifying Window Size --

# maximize a window
shift + cmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + cmd - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - h : yabai -m window --swap west
shift + cmd - l : yabai -m window --swap east

# move window and split
ctrl + shift + cmd - j : yabai -m window --warp south
ctrl + shift + cmd - k : yabai -m window --warp north
ctrl + shift + cmd - h : yabai -m window --warp west
ctrl + shift + cmd - l : yabai -m window --warp east


# move window to prev and next space
shift + cmd - p : yabai -m window --space prev;
shift + cmd - n : yabai -m window --space next;

# move window to space #
shift + cmd - 1 : yabai -m window --space 1;
shift + cmd - 2 : yabai -m window --space 2;
shift + cmd - 3 : yabai -m window --space 3;
shift + cmd - 4 : yabai -m window --space 4;
shift + cmd - 5 : yabai -m window --space 5;
shift + cmd - 6 : yabai -m window --space 6;
shift + cmd - 7 : yabai -m window --space 7;

# -- Starting/Stopping/Restarting Yabai --

# stop/start/restart yabai
ctrl + shift + cmd - q : brew services stop yabai
ctrl + shift + cmd - s : brew services start yabai
ctrl + shift + cmd - r : brew services restart yabai

# RESIZE

# Resize window to the left
cmd + shift - a : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0

# Resize window to the right
cmd + shift - d : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# Resize window downwards
cmd + ctrl - s : yabai -m window --resize bottom:0:20 || yabai -m window --resize top:0:20

# Resize window upwards
cmd + shift - w : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
